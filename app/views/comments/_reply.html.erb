<div class="ms-5">
  <div class="mb-0 border-top">
    <div class="card-body">
      <h5 class="card-title"><%= reply.user.email %></h5>
      <%= turbo_frame_tag "comment_#{reply.id}" do %>
        <p class="card-text"><%= reply.body %></p>
        <%= link_to "Edit",
              edit_dream_comment_path(@dream, reply),
              class: "btn btn-warning btn-sm" %>
      <% end %>
      <%= link_to 'Delete', dream_comment_path(@dream, reply), class: "btn btn-danger btn-sm", data: { turbo_method: :delete } %>
    </div>
  </div>
</div>
