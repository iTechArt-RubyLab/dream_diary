<div class='mt-3'>
  <div class="card mb-1">
    <div class="card-body">
      <h5 class="card-title"><%= comment.user.email %></h5>
      <p class="card-text"><%= comment.body %></p>
      <%= link_to "Reply",
                new_reply_comment_path(@dream, comment),
                class: "btn btn-secondary btn-sm",
                data: { turbo_frame: comment.id } %>
      <%= turbo_frame_tag comment.id %>
    </div>
    <%= turbo_frame_tag "reply-#{comment.id}" do %>
      <%= render partial: 'comments/reply', collection: comment.replies if comment.replies.any? %>
    <% end %>
  </div>
</div>
