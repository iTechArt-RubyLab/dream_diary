<div class="card mb-3" style="max-width: 540px;">
  <% @categories.each do |category| %>
    <div class="row g-0">
      <div class="col-md-4">
        <%= link_to category_path(category) do %>
          <%= image_tag category.image, class: "img-fluid rounded-start" %>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"> <%= category.name %> </h5>
          <p class="card-text"> <%= category.description %> </p>
          <p class="card-text"><small class="text-body-secondary">Last updated <%= time_ago_in_words(category.updated_at) %> ago </small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
