<div class="row row-cols-1 row-cols-md-4 g-4">
  <% @categories.with_attached_image.each do |category| %>
    <div class="col">
      <div class="card">
        <%= link_to category_path(category) do %>
          <%= image_tag category.image, class: "card-img-top img-fluid", style: "max-height: 150px" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"> <%= category.name %> </h5>
          <p class="card-text"> <%= category.description %> </p>
          <p class="card-text"><small class="text-body-secondary">Last updated <%= time_ago_in_words(category.updated_at) %> ago </small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
