<% flash.each do |type, msg| %>
  <div class="position-fixed bottom-0 end-0 p-3" data-controller="toast">
    <div class="toast bg-light text-dark" role="alert" aria-live="assertive" aria-atomic="true" data-toast-target='toast'>
      <div class="toast-header">
        <strong class="me-auto"> <%= type %> </strong>
        <small>just now</small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body">
        <%= msg %>
      </div>
    </div>
  </div>
<% end %>
