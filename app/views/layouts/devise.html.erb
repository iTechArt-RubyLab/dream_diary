<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'gif' %>
    <title> 
      <% if content_for?(:title) %>
        <%= yield(:title) %>
      <% else %>
        DreamDiary
      <% end %>
    </title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "devise", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <%= content_tag :body do %>
    <%= render 'header' %>
    <div class='devise-container'>
      <%= yield %>
    </div>
  <% end %>
  <%= render 'toast' %>
</html>
