<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'gif' %>
    <title> 
      <% if content_for?(:title) %>
        <%= yield(:title) %>
      <% else %>
        DreamDiary
      <% end %>
    </title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <%= content_tag :body, class: 'bg-dark-purple' do %>
  <%= render 'header' %>
  <div class="container-fluid">
    <div class="row">
      <%= render 'moon_phase' %>
      <div id='dreams' class="col-md-9">
        <%= yield %>
      </div>
    </div>
  </div>
  <% end %>
  <%= render 'toast' %>
</html>
